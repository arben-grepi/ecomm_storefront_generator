rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public reads for storefront collections
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == "arbengrepi@gmail.com";
      // Allow authenticated users to update metrics only (for analytics tracking)
      allow update: if request.auth != null
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['name', 'slug', 'description', 'imageUrl', 'active', 'previewProductIds', 'createdAt']));
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == "arbengrepi@gmail.com";
      // Allow authenticated users to update metrics only (for analytics tracking)
      allow update: if request.auth != null
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['name', 'slug', 'categoryId', 'supplierId', 'basePrice', 'description', 'images', 'careInstructions', 'tags', 'active', 'createdAt']));
    }

    match /products/{productId}/variants/{variantId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == "arbengrepi@gmail.com";
    }

    match /suppliers/{supplierId} {
      allow read, write: if request.auth != null
                         && request.auth.token.email == "arbengrepi@gmail.com";
    }

    match /orders/{orderId} {
      // Allow users to create their own orders
      allow create: if request.auth != null
                     && (request.resource.data.userId == request.auth.uid || request.resource.data.userId == null);
      // Allow users to read their own orders
      allow read: if request.auth != null
                   && (resource.data.userId == request.auth.uid || request.auth.token.email == "arbengrepi@gmail.com");
      // Only admin can update/delete orders
      allow update, delete: if request.auth != null
                             && request.auth.token.email == "arbengrepi@gmail.com";
    }

    match /promotions/{promoId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == "arbengrepi@gmail.com";
    }

    match /carts/{cartId} {
      // Allow users to read/write their own cart
      // Cart document ID is the user's UID, so we can check cartId == auth.uid
      // For reads: allow if cartId matches user's uid (works even if doc doesn't exist yet)
      allow read: if request.auth != null
                  && request.auth.uid == cartId;
      // For creates: cartId must match auth uid, and userId in data must match
      allow create: if request.auth != null
                     && request.auth.uid == cartId
                     && request.auth.uid == request.resource.data.userId;
      // For updates: cartId must match auth uid, document must exist, and userId must remain the same
      allow update: if request.auth != null
                     && request.auth.uid == cartId
                     && (!resource.exists || request.auth.uid == resource.data.userId)
                     && request.auth.uid == request.resource.data.userId;
      // For deletes: cartId must match auth uid and document must exist
      allow delete: if request.auth != null
                     && request.auth.uid == cartId
                     && (!resource.exists || request.auth.uid == resource.data.userId);
    }

    match /userEvents/{eventId} {
      allow write: if request.auth != null;
      allow read: if request.auth != null
                   && request.auth.token.email == "arbengrepi@gmail.com";
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
