rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Banner images - allow public read, admin write
    match /banners/{storefront}/{allPaths=**} {
      // Allow anyone to read banner images (they're public)
      allow read: if true;
      
      // Only allow admins to write (upload/delete)
      allow write: if request.auth != null
        && request.auth.token.email in [
          "arbengrepi@gmail.com",
          "andreas.konga@gmail.com",
          "muliqiblerine@gmail.com"
        ];
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

