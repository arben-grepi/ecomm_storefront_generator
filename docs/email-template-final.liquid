{%- comment -%} Set storefront-specific branding {%- endcomment -%}
{%- comment -%} Extract storefront_name from custom attributes {%- endcomment -%}
{%- assign storefront_name = "BLERINAS" -%}
{%- for attribute in attributes -%}
  {%- if attribute.first == "storefront_name" or attribute.first == "_storefront" -%}
    {%- assign storefront_name = attribute.last -%}
  {%- endif -%}
{%- endfor -%}

{%- case storefront_name -%}
  {%- when "LUNERA" -%}
    {%- assign display_name = "Lunera Lingerie" -%}
    {%- assign logo_url = "https://luneralingerie.com/Blerinas/Lunera_logo-email.png" -%}
    {%- assign home_url = "https://luneralingerie.com" -%}
    {%- assign brand_color = "#E91E63" -%}
  {%- when "HEALTH" -%}
    {%- assign display_name = "Blerinas Health" -%}
    {%- assign logo_url = "https://blerinas.com/Blerinas/Blerinas-logo-transparent2-email.png" -%}
    {%- assign home_url = "https://blerinas.com/HEALTH" -%}
    {%- assign brand_color = "#4CAF50" -%}
  {%- when "FIVESTARFINDS" -%}
    {%- assign display_name = "Blerinas Five Star Finds" -%}
    {%- assign logo_url = "https://blerinas.com/FivestarFinds/Blerinas-logo-transparent2-email.png" -%}
    {%- assign home_url = "https://blerinas.com/FIVESTARFINDS" -%}
    {%- assign brand_color = "#FF9800" -%}
  {%- else -%}
    {%- assign display_name = "Blerinas" -%}
    {%- assign logo_url = "https://blerinas.com/Blerinas/Blerinas-logo-transparent2-email.png" -%}
    {%- assign home_url = "https://blerinas.com" -%}
    {%- assign brand_color = "#2196F3" -%}
{%- endcase -%}
{%- comment -%} End storefront branding {%- endcomment -%}

